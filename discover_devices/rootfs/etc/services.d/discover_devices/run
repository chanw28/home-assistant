#!/usr/bin/with-contenv bashio
# ==============================================================================
# Start the example service
# s6-overlay docs: https://github.com/just-containers/s6-overlay
# ==============================================================================

# Add your code here

# Declare variables
declare apikey

## Get the 'apikey' key from the user config options.
message=$(bashio::config 'apikey')

## Print the message the user supplied, defaults to "Hello World..."
bashio::log.info "${message:="Hello World..."}"

## Run your program
bashio::log.info "Starting discover_devices..."
exec python3 /opt/discover_devices.py
